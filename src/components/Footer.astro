---
/**
 * Footer Component
 *
 * Site footer with NAP info, CCB licensing, navigation, and social links.
 * Per frontend/AGENTS.md: Evergreen background, phone in Copper.
 */
import {
  company,
  licensing,
  footerServices,
  footerCompany,
  socialLinks,
} from "@/data";
---

<footer class="bg-evergreen">
  <!-- Main Footer Content -->
  <div class="container-homepage py-12 lg:py-16">
    <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-4">
      <!-- Company Info (NAP) -->
      <div class="md:col-span-2 lg:col-span-1">
        <h3 class="font-serif text-xl font-bold text-white lg:text-2xl">
          {company.name}
        </h3>
        <p class="mt-3 max-w-xs text-white/70">
          {company.tagline}
        </p>

        <!-- Phone -->
        <div class="mt-6">
          <a
            href={company.phoneHref}
            class="group text-copper hover:text-copper/80 inline-flex items-center gap-2 text-lg font-semibold transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
            {company.phone}
          </a>
        </div>

        <!-- Email -->
        <div class="mt-2">
          <a
            href={company.emailHref}
            class="text-white/70 transition-colors hover:text-white"
          >
            {company.email}
          </a>
        </div>

        <!-- Location -->
        <p class="mt-4 text-sm text-white/60">
          <span class="flex items-center gap-1.5">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            {company.location}
          </span>
        </p>
      </div>

      <!-- Services Links -->
      <div>
        <h4
          class="mb-4 text-sm font-semibold tracking-wider text-white uppercase"
        >
          Services
        </h4>
        <ul class="space-y-3">
          {
            footerServices.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-white/70 transition-colors hover:text-white"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4
          class="mb-4 text-sm font-semibold tracking-wider text-white uppercase"
        >
          Company
        </h4>
        <ul class="space-y-3">
          {
            footerCompany.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-white/70 transition-colors hover:text-white"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Trust & Credentials -->
      <div>
        <h4
          class="mb-4 text-sm font-semibold tracking-wider text-white uppercase"
        >
          Credentials
        </h4>

        <ul class="space-y-4">
          <!-- CCB License -->
          <li>
            <a
              href={licensing.ccb.verifyUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-start gap-3 text-white/70 transition-colors hover:text-white"
            >
              <div
                class="text-brass flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-white/10"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              </div>
              <div>
                <span class="text-sm font-medium text-white"
                  >Oregon CCB Licensed</span
                >
                <span class="mt-0.5 block text-xs text-white/60">
                  {licensing.ccb.display}
                </span>
              </div>
            </a>
          </li>

          <!-- BBB Accredited -->
          <li>
            <a
              href={licensing.bbb.profileUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-start gap-3 text-white/70 transition-colors hover:text-white"
            >
              <div
                class="text-brass flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-white/10"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <polygon
                    points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
                  ></polygon>
                </svg>
              </div>
              <div>
                <span class="text-sm font-medium text-white"
                  >BBB Accredited</span
                >
                <span class="mt-0.5 block text-xs text-white/60">
                  {licensing.bbb.rating} Rating • Since {
                    licensing.bbb.accreditedSince
                  }
                </span>
              </div>
            </a>
          </li>

          <!-- Lead Safe -->
          {
            licensing.leadSafeCertified && (
              <li class="flex items-start gap-3 text-white/70">
                <div class="text-brass flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-white/10">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" />
                    <path d="m9 12 2 2 4-4" />
                  </svg>
                </div>
                <div>
                  <span class="text-sm font-medium text-white">
                    Lead-Safe Certified
                  </span>
                  <span class="mt-0.5 block text-xs text-white/60">
                    EPA RRP Certified
                  </span>
                </div>
              </li>
            )
          }
        </ul>

        <!-- Social Links -->
        <div class="mt-8">
          <p
            class="mb-3 text-sm font-semibold tracking-wider text-white uppercase"
          >
            Follow Us
          </p>
          <div class="flex gap-3">
            {
              socialLinks.map((social) => (
                <a
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/10 text-white/70 transition-all hover:bg-white/20 hover:text-white"
                  aria-label={`Follow us on ${social.name}`}
                >
                  {social.icon === "facebook" && (
                    <svg
                      class="h-5 w-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
                    </svg>
                  )}
                  {social.icon === "instagram" && (
                    <svg
                      class="h-5 w-5"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      viewBox="0 0 24 24"
                    >
                      <rect width="20" height="20" x="2" y="2" rx="5" ry="5" />
                      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                      <line x1="17.5" x2="17.51" y1="6.5" y2="6.5" />
                    </svg>
                  )}
                  {social.icon === "google" && (
                    <svg
                      class="h-5 w-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                      <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                      <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                      <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                    </svg>
                  )}
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-white/10">
    <div class="container-homepage py-6">
      <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
        <p class="text-center text-sm text-white/60 md:text-left">
          © {new Date().getFullYear()}
          {company.name}. All rights reserved.
        </p>

        <div
          class="flex flex-wrap items-center justify-center gap-4 text-sm text-white/60 md:gap-6"
        >
          <span class="flex items-center gap-1.5">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="text-brass h-4 w-4"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            {licensing.ccb.display}
          </span>

          <span class="hidden h-4 w-px bg-white/20 sm:block"></span>

          <span>{company.serviceArea}</span>
        </div>
      </div>
    </div>
  </div>
</footer>
