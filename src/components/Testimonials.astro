---

<section class="relative py-24 lg:py-32" id="testimonials">
  <!-- Subtle background pattern -->
  <div
    class="via-secondary/10 absolute inset-0 bg-gradient-to-b from-transparent to-transparent"
  >
  </div>

  <div class="relative container mx-auto px-6">
    <!-- Header -->
    <div class="mx-auto mb-16 max-w-2xl text-center">
      <span
        class="text-primary mb-4 inline-block text-xs tracking-[0.3em] uppercase"
      >
        Testimonials
      </span>
      <h2 class="text-foreground font-serif text-4xl font-medium md:text-5xl">
        Don't Just Take
        <br />
        <span class="text-muted-foreground">Our Word for It</span>
      </h2>
      <p class="text-muted-foreground mx-auto mt-6 max-w-xl">
        Hear from some of our amazing customers who we've had the pleasure of
        working with.
      </p>

      <!-- Google Reviews Badge -->
      <div
        class="border-border/50 bg-card/50 mt-8 inline-flex items-center gap-3 rounded-full border px-5 py-2.5"
      >
        <svg
          class="h-5 w-5"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
            fill="#4285F4"></path>
          <path
            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
            fill="#34A853"></path>
          <path
            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
            fill="#FBBC05"></path>
          <path
            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
            fill="#EA4335"></path>
        </svg>
        <div class="flex items-center gap-1.5">
          <div class="flex">
            {
              [...Array(5)].map(() => (
                <svg
                  class="h-4 w-4 text-amber-400"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path d="M9.538 1.61a.5.5 0 01.924 0l1.866 4.967 5.263.434a.5.5 0 01.285.878l-4.086 3.5.949 5.233a.5.5 0 01-.746.543L10 14.954l-3.993 2.211a.5.5 0 01-.746-.543l.95-5.233-4.087-3.5a.5.5 0 01.285-.878l5.263-.434L9.538 1.61z" />
                </svg>
              ))
            }
          </div>
          <span class="text-foreground text-sm font-medium">5.0</span>
          <span class="text-muted-foreground text-sm">on Google</span>
        </div>
      </div>
    </div>

    <!-- Testimonials Grid - Masonry-style -->
    <div class="columns-1 gap-6 space-y-6 md:columns-2 lg:columns-3">
      {
        testimonials.map((testimonial, index) => (
          <a
            href={testimonial.reviewUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="group block break-inside-avoid"
          >
            <div class="border-border/50 bg-card/50 hover:border-primary/30 hover:bg-card hover:shadow-primary/5 relative overflow-hidden rounded-lg border p-6 transition-all duration-300 hover:shadow-lg">
              {/* Subtle gradient on hover */}
              <div class="from-primary/5 pointer-events-none absolute inset-0 bg-gradient-to-br to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />

              <div class="relative">
                {/* Stars */}
                <div class="mb-4 flex gap-1">
                  {[...Array(5)].map(() => (
                    <svg
                      class="text-primary h-4 w-4"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path d="M9.538 1.61a.5.5 0 01.924 0l1.866 4.967 5.263.434a.5.5 0 01.285.878l-4.086 3.5.949 5.233a.5.5 0 01-.746.543L10 14.954l-3.993 2.211a.5.5 0 01-.746-.543l.95-5.233-4.087-3.5a.5.5 0 01.285-.878l5.263-.434L9.538 1.61z" />
                    </svg>
                  ))}
                </div>

                {/* Quote */}
                <blockquote class="text-foreground/90 text-sm leading-relaxed">
                  "{testimonial.quote}"
                </blockquote>

                {/* Author */}
                <div class="border-border/30 mt-5 flex items-center gap-3 border-t pt-5">
                  <div class="border-border/50 bg-secondary/50 relative h-11 w-11 overflow-hidden rounded-full border">
                    <img
                      src={testimonial.image}
                      alt={testimonial.imageAlt}
                      class="h-full w-full object-cover"
                      loading="lazy"
                    />
                  </div>
                  <div>
                    <div class="text-foreground font-medium">
                      {testimonial.name}
                    </div>
                    <div class="text-muted-foreground flex items-center gap-1.5 text-xs">
                      <svg
                        class="h-3 w-3"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                          fill="#4285F4"
                        />
                        <path
                          d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                          fill="#34A853"
                        />
                        <path
                          d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                          fill="#FBBC05"
                        />
                        <path
                          d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                          fill="#EA4335"
                        />
                      </svg>
                      <span>Verified Review</span>
                    </div>
                  </div>

                  {/* External link icon */}
                  <svg
                    class="text-muted-foreground/50 group-hover:text-primary ml-auto h-4 w-4 transition-all duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                    />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <a
        href="https://www.google.com/maps/place/NW+Development+Contracting/@45.4851648,-122.7745399,17z/data=!4m8!3m7!1s0x5495a19c5c75d7fb:0x5d541e82cadce9ac!8m2!3d45.4851648!4d-122.771965!9m1!1b1!16s%2Fg%2F11j8qbcc2l"
        target="_blank"
        rel="noopener noreferrer"
        class="group text-muted-foreground hover:text-primary inline-flex items-center gap-2 text-sm transition-colors"
      >
        Read all reviews on Google
        <svg
          class="h-4 w-4 transition-transform group-hover:translate-x-0.5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
