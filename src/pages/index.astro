---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import PartnersMarquee from "../components/PartnersMarquee.astro";
import Testimonials from "../components/Testimonials.astro";
---

<Layout>
  <Header />
  <main>
    <Hero />
    <PartnersMarquee />

    <!-- Placeholder for additional sections -->
    <section class="relative py-32" id="services-preview">
      <div class="container mx-auto px-6 text-center">
        <span
          class="text-primary mb-4 inline-block text-xs tracking-[0.3em] uppercase"
        >
          Our Services
        </span>
        <h2 class="text-foreground font-serif text-4xl font-medium md:text-5xl">
          Commercial & Residential
          <br />
          <span class="text-muted-foreground">Expertise</span>
        </h2>
        <p class="text-muted-foreground mx-auto mt-6 max-w-2xl">
          From complete home renovations to commercial tenant improvements, we
          deliver exceptional craftsmanship and attention to detail on every
          project.
        </p>

        <!-- Service cards placeholder -->
        <div class="mt-16 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {
            [
              {
                title: "Commercial Tenant Improvement",
                desc: "Transform your commercial space with expert renovations tailored to your business needs.",
              },
              {
                title: "Residential Remodeling",
                desc: "Kitchen, bathroom, and whole-home renovations that enhance your living space.",
              },
              {
                title: "Restoration Services",
                desc: "Water damage, fire damage, and structural restoration with precision and care.",
              },
            ].map((service) => (
              <div class="group border-border/50 bg-card/50 hover:border-primary/30 hover:bg-card relative overflow-hidden rounded border p-8 text-left transition-all duration-300">
                <div class="from-primary/5 absolute inset-0 bg-gradient-to-br to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
                <div class="relative">
                  <h3 class="text-foreground font-serif text-xl font-medium">
                    {service.title}
                  </h3>
                  <p class="text-muted-foreground mt-3 text-sm">
                    {service.desc}
                  </p>
                  <a
                    href="/residential"
                    class="text-primary hover:text-accent mt-6 inline-flex items-center gap-2 text-xs tracking-widest uppercase transition-colors"
                  >
                    Learn More
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-3 w-3 transition-transform group-hover:translate-x-1"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"
                      />
                    </svg>
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <Testimonials />

    <!-- Contact section placeholder -->
    <section
      class="border-border/30 bg-secondary/20 relative border-t py-32"
      id="contact"
    >
      <div class="texture-grain absolute inset-0"></div>
      <div class="relative container mx-auto px-6 text-center">
        <span
          class="text-primary mb-4 inline-block text-xs tracking-[0.3em] uppercase"
        >
          Get Started
        </span>
        <h2 class="text-foreground font-serif text-4xl font-medium md:text-5xl">
          Contact Us for a
          <br />
          <span class="text-gradient-copper">Free Estimate</span>
        </h2>
        <p class="text-muted-foreground mx-auto mt-6 max-w-xl">
          Ready to transform your space? Let's discuss your project. We'd love
          to connect with you and bring your vision to life.
        </p>

        <div
          class="mt-10 flex flex-col items-center justify-center gap-6 sm:flex-row"
        >
          <a
            href="tel:+15034707007"
            class="border-primary bg-primary text-primary-foreground hover:bg-primary/90 inline-flex items-center gap-3 rounded border px-8 py-4 text-sm font-medium tracking-widest uppercase transition-all"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
              ></path>
            </svg>
            (503) 470-7007
          </a>
          <a
            href="mailto:info@developmentcontracting.com"
            class="border-border/50 bg-card/50 text-foreground hover:border-primary/30 hover:bg-card inline-flex items-center gap-3 rounded border px-8 py-4 text-sm font-medium tracking-widest uppercase transition-all"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
              ></path>
            </svg>
            Email Us
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="border-border/30 bg-background border-t py-16">
      <div class="container mx-auto px-6">
        <div class="grid gap-12 md:grid-cols-4">
          <!-- Logo & Info -->
          <div class="md:col-span-2">
            <div class="flex items-center gap-3">
              <div
                class="border-primary/30 bg-secondary/50 flex h-10 w-10 items-center justify-center rounded border"
              >
                <span class="text-primary text-lg font-bold">DC</span>
              </div>
              <div>
                <span
                  class="text-foreground block font-serif text-lg font-medium tracking-tight"
                >
                  Development Contracting
                </span>
              </div>
            </div>
            <p class="text-muted-foreground mt-4 max-w-sm text-sm">
              Expert residential and commercial renovation services in Oregon
              and Washington. Licensed, bonded, and insured.
            </p>
            <p class="text-muted-foreground/60 mt-4 text-xs">CCB# 221238</p>
          </div>

          <!-- Quick Links -->
          <div>
            <h4
              class="text-muted-foreground mb-4 text-xs tracking-widest uppercase"
            >
              Services
            </h4>
            <ul class="space-y-2">
              <li>
                <a
                  href="/commercial"
                  class="text-foreground/80 hover:text-primary text-sm transition-colors"
                  >Commercial</a
                >
              </li>
              <li>
                <a
                  href="/residential"
                  class="text-foreground/80 hover:text-primary text-sm transition-colors"
                  >Residential</a
                >
              </li>
              <li>
                <a
                  href="/about"
                  class="text-foreground/80 hover:text-primary text-sm transition-colors"
                  >About Us</a
                >
              </li>
              <li>
                <a
                  href="/contact"
                  class="text-foreground/80 hover:text-primary text-sm transition-colors"
                  >Contact</a
                >
              </li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h4
              class="text-muted-foreground mb-4 text-xs tracking-widest uppercase"
            >
              Connect
            </h4>
            <ul class="space-y-2">
              <li>
                <a
                  href="tel:+15034707007"
                  class="text-foreground/80 hover:text-primary text-sm transition-colors"
                  >(503) 470-7007</a
                >
              </li>
              <li>
                <a
                  href="mailto:info@developmentcontracting.com"
                  class="text-foreground/80 hover:text-primary text-sm transition-colors"
                  >Email Us</a
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- Bottom bar -->
        <div
          class="border-border/30 mt-12 flex flex-col items-center justify-between gap-4 border-t pt-8 md:flex-row"
        >
          <p class="text-muted-foreground/60 text-xs">
            Â© 2024 Development Contracting. All rights reserved.
          </p>
          <div class="flex gap-6">
            <a
              href="/privacy"
              class="text-muted-foreground/60 hover:text-muted-foreground text-xs transition-colors"
              >Privacy Policy</a
            >
            <a
              href="/terms"
              class="text-muted-foreground/60 hover:text-muted-foreground text-xs transition-colors"
              >Terms of Service</a
            >
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>
