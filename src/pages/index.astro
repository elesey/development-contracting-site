---
/**
 * Home Page
 *
 * Homepage with Warm Craftsman Premium design (light mode only).
 * Built following HOMEPAGE-SPEC.md and frontend/AGENTS.md
 */
import LayoutHomepage from "@/layouts/LayoutHomepage.astro";
import StickyHeader from "@/components/StickyHeader.astro";
import Footer from "@/components/Footer.astro";
import BrandLogos from "@/components/BrandLogos.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/Gemini_Generated_Image_chqjxychqjxychqj.png";
import { company, licensing, heroContent, stats, awards } from "@/data";
---

<LayoutHomepage>
  <!-- Sticky Header with Utility Bar & Navigation -->
  <StickyHeader />

  <main id="main-content">
    <!-- Hero Section (Phase 3 preview) -->
    <section class="section-padding bg-bone">
      <div class="container-homepage">
        <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
          <!-- Left: Text content -->
          <div class="max-w-xl">
            <!-- Eyebrow -->
            <p
              class="text-brass mb-4 text-sm font-semibold tracking-wider uppercase"
            >
              {heroContent.eyebrow}
            </p>

            <!-- H1 Headline -->
            <h1 class="text-charcoal mb-6">
              {heroContent.headline}
            </h1>

            <!-- Subheadline -->
            <p class="text-slate mb-8 text-lg leading-relaxed">
              {heroContent.subheadline}
            </p>

            <!-- CTAs -->
            <div class="mb-8 flex flex-wrap items-center gap-4">
              <a href={heroContent.primaryCta.href} class="btn-primary">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path>
                </svg>
                {heroContent.primaryCta.text}
              </a>
              <a href={heroContent.secondaryCta.href} class="btn-secondary">
                {heroContent.secondaryCta.text}
              </a>
            </div>

            <!-- Trust badges (Phase 3.5 - BBB, CCB, Licensed OR+WA, Lead-safe EPA RRP) -->
            <div class="flex flex-wrap gap-3">
              <!-- BBB Accredited -->
              <a
                href={licensing.bbb.profileUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="trust-badge"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="text-brass h-4 w-4 flex-shrink-0"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <circle cx="12" cy="8" r="6"></circle>
                  <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"></path>
                </svg>
                <span>{licensing.bbb.display}</span>
              </a>

              <!-- CCB License -->
              <a
                href={licensing.ccb.verifyUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="trust-badge"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="text-brass h-4 w-4 flex-shrink-0"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"
                  ></path>
                  <path d="M14 2v4a2 2 0 0 0 2 2h4"></path>
                  <path d="m9 15 2 2 4-4"></path>
                </svg>
                <span>{licensing.ccb.display}</span>
              </a>

              <!-- Licensed in OR + WA -->
              <span class="trust-badge">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="text-brass h-4 w-4 flex-shrink-0"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  <path d="m9 12 2 2 4-4"></path>
                </svg>
                <span>Licensed in OR + WA</span>
              </span>

              <!-- Lead-Safe Certified (EPA RRP) -->
              <span class="trust-badge">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="text-brass h-4 w-4 flex-shrink-0"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"
                  ></path>
                  <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"
                  ></path>
                </svg>
                <span>Lead-Safe Certified (EPA RRP)</span>
              </span>
            </div>
          </div>

          <!-- Right: Hero Image -->
          <div class="relative">
            <div class="overflow-hidden rounded-lg shadow-xl">
              <Image
                src={heroImage}
                alt="Modern kitchen remodel with elegant fixtures and premium finishes"
                class="h-auto w-full object-cover"
                width={800}
                height={533}
                loading="eager"
                decoding="async"
              />
            </div>
            <!-- Accent card overlay -->
            <div
              class="absolute -bottom-4 -left-4 rounded-lg bg-white p-4 shadow-lg sm:-bottom-6 sm:-left-6 sm:p-6"
            >
              <div class="flex items-center gap-3">
                <div
                  class="bg-sage-mist flex h-12 w-12 items-center justify-center rounded-full"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="text-evergreen h-6 w-6"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                </div>
                <div>
                  <p class="text-charcoal font-serif text-lg font-bold">230+</p>
                  <p class="text-slate text-sm">Projects Completed</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Brand Marquee (Phase 4) - Trusted Partners -->
    <section class="bg-warm-stone py-10 md:py-12">
      <div class="container-homepage">
        <!-- Section header -->
        <div class="mb-6 text-center">
          <p class="text-slate text-sm font-medium tracking-wider uppercase">
            Trusted Partners & Premium Materials
          </p>
          <div class="bg-brass/40 mx-auto mt-3 h-px w-16"></div>
        </div>

        <!-- Brand logo marquee -->
        <BrandLogos />

        <!-- Subtle "we work with the best" message -->
        <p class="text-slate/70 mt-6 text-center text-xs">
          We partner with industry-leading brands to deliver exceptional quality
        </p>
      </div>
    </section>

    <!-- Services placeholder (Phase 5) -->
    <section id="services" class="section-padding bg-bone">
      <div class="container-homepage">
        <h2 class="text-evergreen mb-4 text-center">
          Remodeling & Home Additions
        </h2>
        <p class="text-slate mx-auto mb-12 max-w-2xl text-center">
          Expert craftsmanship for kitchens, bathrooms, whole-home renovations,
          and custom additions.
        </p>
        <div
          class="border-driftwood text-slate rounded border-2 border-dashed p-12 text-center"
        >
          <p class="text-sm">
            Services showcase with tabs will go here (Phase 5)
          </p>
        </div>
      </div>
    </section>

    <!-- Awards & Certificates placeholder (Phase 6) -->
    <section class="section-padding bg-warm-stone">
      <div class="container-homepage">
        <h2 class="text-evergreen mb-8 text-center">
          Credentials & Certifications
        </h2>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {
            awards.slice(0, 6).map((award) => (
              <div class="card-shadow bg-card rounded-lg p-6">
                <div class="text-brass mb-3">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-8 w-8"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                  </svg>
                </div>
                <h3 class="text-charcoal mb-2 text-lg">{award.title}</h3>
                <p class="text-slate text-sm">{award.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="section-padding bg-sage-mist">
      <div class="container-homepage">
        <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
          {
            stats.map((stat) => (
              <div class="text-center">
                <p class="text-evergreen text-4xl font-bold md:text-5xl">
                  {stat.value}
                </p>
                <p class="text-slate mt-2 text-sm font-medium tracking-wide uppercase">
                  {stat.label}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Testimonials placeholder (Phase 7) -->
    <section id="reviews" class="section-padding bg-bone">
      <div class="container-homepage">
        <h2 class="text-evergreen mb-4 text-center">What Our Clients Say</h2>
        <p class="text-slate mx-auto mb-8 max-w-2xl text-center">
          Don't just take our word for it. Here's what our clients have to say
          about working with us.
        </p>
        <div
          class="border-driftwood text-slate rounded border-2 border-dashed p-12 text-center"
        >
          <p class="text-sm">Animated testimonials will go here (Phase 7)</p>
        </div>
      </div>
    </section>

    <!-- Final CTA Section (Phase 8 preview) -->
    <section id="contact" class="section-padding bg-evergreen">
      <div class="container-homepage">
        <div
          class="flex flex-col items-center justify-between gap-8 md:flex-row"
        >
          <div class="text-center md:text-left">
            <h2 class="mb-3 text-white">Ready to Start Your Project?</h2>
            <p class="max-w-md text-white/80">
              From remodels to additions, our team is ready to bring your vision
              to life. Licensed in Oregon & Washington.
            </p>
          </div>

          <div class="flex flex-col items-center gap-3 sm:flex-row">
            <span class="text-xl font-semibold text-white">{company.phone}</span
            >
            <a href={company.phoneHref} class="btn-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path>
              </svg>
              CALL NOW
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <Footer />
</LayoutHomepage>
