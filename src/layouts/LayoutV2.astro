---
import "../styles/global-v2.css";
import { ClientRouter } from "astro:transitions";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Development Contracting | Portland Commercial & Residential Renovation",
  description = "Expert commercial and residential renovation services in Oregon and Washington. Licensed, bonded, and insured general contractor specializing in restoration, remodels, and tenant improvements.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- View Transitions for smooth navigation -->
    <ClientRouter />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Architectural Typography: Space Grotesk + Inter + Cormorant Garamond -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400;1,500;1,600&family=Inter:wght@400;500;600&family=Space+Grotesk:wght@500;600;700&family=Instrument+Serif:ital@0;1&display=swap"
      rel="stylesheet"
    />

    <!-- LocalBusiness Schema for SEO -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Development Contracting",
        "description": "Expert commercial and residential renovation services in Oregon and Washington.",
        "telephone": "+1-503-470-7007",
        "email": "info@developmentcontracting.com",
        "address": {
          "@type": "PostalAddress",
          "addressRegion": "OR",
          "addressCountry": "US"
        },
        "areaServed": [
          {
            "@type": "State",
            "name": "Oregon"
          },
          {
            "@type": "State",
            "name": "Washington"
          }
        ],
        "priceRange": "$$",
        "openingHours": "Mo-Fr 07:00-18:00"
      }
    </script>
  </head>
  <body class="min-h-screen antialiased">
    <slot />
  </body>
</html>

<style is:global>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Selection styling */
  ::selection {
    background: #c1733f;
    color: #fffcf8;
  }

  /* Focus visible styling */
  :focus-visible {
    outline: 2px solid #c1733f;
    outline-offset: 2px;
  }
</style>
