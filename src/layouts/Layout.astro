---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Development Contracting | Portland Commercial & Residential Renovation",
  description = "Expert commercial and residential renovation services in Oregon and Washington. Licensed, bonded, and insured general contractor specializing in restoration, remodels, and tenant improvements.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Premium Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;1,9..40,400&family=Playfair+Display:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-background min-h-screen font-sans antialiased">
    <!-- Textured background overlay for entire page -->
    <div class="texture-noise pointer-events-none fixed inset-0 z-0"></div>

    <slot />
  </body>
</html>

<style is:global>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Selection styling */
  ::selection {
    background: hsl(28, 65%, 52%);
    color: hsl(30, 15%, 7%);
  }

  /* Focus visible styling */
  :focus-visible {
    outline: 2px solid hsl(28, 65%, 52%);
    outline-offset: 2px;
  }
</style>
